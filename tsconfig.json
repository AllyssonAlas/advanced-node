{
  "compilerOptions": {
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2021",
    "rootDirs": ["src", "tests"],
    "strict": true,
  },
  "include": ["src", "tests"]
}
